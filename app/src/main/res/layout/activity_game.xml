<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/stone_dark"
    tools:context="com.example.tristan.arealchessgame.GameActivity">


    <com.example.tristan.arealchessgame.BoardGridView
        android:id="@+id/chessboard"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:layout_margin="20dp"
        />

    <!--Forfeit Button-->

    <ImageButton
        android:id="@+id/forfeit_p2"
        android:layout_width="wrap_content"
        android:src="@drawable/ic_block_black_24dp"
        android:layout_height="wrap_content"
        android:text="@string/forfeit"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:onClick="forfeitPlayer"
        />

    <ImageButton
        android:id="@+id/reset_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_refresh_black_24dp"
        android:text="@string/reset"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:onClick="resetBoard"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/counter"
        android:layout_alignParentEnd="true"/>

</RelativeLayout>
