<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/stone_dark"
    tools:context="com.example.tristan.arealchessgame.GameActivity">


    <com.example.tristan.arealchessgame.GUI.BoardGridView
        android:id="@+id/chessboard"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:layout_margin="20dp"
        />

    <!--Forfeit Buttons-->
    <Button
        android:id="@+id/forfeit_p1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/forfeit"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/chessboard"/>

    <Button
        android:id="@+id/forfeit_p2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/forfeit"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/chessboard"
        android:rotation="@integer/rotate_180"
        />

</RelativeLayout>
